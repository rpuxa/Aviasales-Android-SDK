<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/alpha_back"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/mrec_container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/pb_searching"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:gravity="center"
		android:orientation="horizontal" />

	<ProgressBar
		android:id="@+id/pb_searching"
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_width="match_parent"
		android:layout_height="3dp"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_margin="20dp"
		android:progressDrawable="@drawable/progressbar_horizontal" />

	<TextView
		android:id="@+id/textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/pb_searching"
		android:layout_alignParentStart="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_marginBottom="8dp"
		android:gravity="center"
		android:text="@string/searching_text"
		android:textColor="@color/searching_text_color"
		android:textSize="22sp"
		android:textStyle="bold" />
</RelativeLayout>