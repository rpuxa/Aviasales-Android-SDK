                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />


                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="https"
                    android:host="www.aviasales.ru"
                    android:pathPrefix="/" />

                <data android:scheme="https"
                    android:host="www.skyscanner.ru"
                    android:pathPrefix="/" />

                <data android:scheme="https"
                    android:host="www.avia.tutu.ru"
                    android:pathPrefix="/" />

                <data android:scheme="https"
                    android:host="www.kupibilet.ru"
                    android:pathPrefix="/" />

                <data android:scheme="https"
                    android:host="www.avia.yandex.ru"
                    android:pathPrefix="/" />

                <data android:scheme="https"
                    android:host="www.ozon.travel"
                    android:pathPrefix="/" />

                <data android:scheme="https"
                    android:host="www.aeroflot.ru"
                    android:pathPrefix="/" />

                <data android:scheme="https"
                    android:host="www.momondo.ru"
                    android:pathPrefix="/" />

                <data android:scheme="https"
                    android:host="госбилет.рф"
                    android:pathPrefix="/" />

                <data android:scheme="https"
                    android:host="www.onetwotrip.com"
                    android:pathPrefix="/" />

                <data android:scheme="https"
                    android:host="avticket.ru"
                    android:pathPrefix="/" />

                <data android:scheme="https"
                    android:host="tickets.ru"
                    android:pathPrefix="/" />

                <data android:scheme="https"
                    android:host="biletix.ru"
                    android:pathPrefix="/" />

            </intent-filter>
        </activity>
    </application>

</manifest>